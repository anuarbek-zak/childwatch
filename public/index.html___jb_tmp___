<!--<script src="index.js"></script>-->
<script>
    $(document).ready(function(){
        var modal = document.getElementById('myModal');
        var btn = document.getElementById("myBtn");

        scrollableHeader();

        btn.onclick = function() {
            openModal();
        };

        $('.scrollToTop').click(function(){
            openModal();
            return false;
        });


        $(".close").click(function () {
            closeModal();
        });

        function closeModal() {
            modal.style.display = "none";
            $(".modal-body").show();
            $(".congrats").hide();
        }

        function openModal() {
            modal.style.display = "block";
        }

        setInterval(function () {
            $(".scrollToTop").toggleClass("shake");
        },2000);

        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        };

        $("#sendToMail").click(function (e) {
            e.preventDefault();
            var data = {};
            data.name = $("#clientName").val();
            data.phone = $("#clientPhone").val();
            if(data.name==""||data.phone=="") {
                $(".error").show();
                return;
            }
            console.log("data",data);
            $.ajax({
                type: 'POST',
                url: 'http://clocklp2.herokuapp.com/endpoint',
                data: data,
                success: function(data) {
                    console.log('success');
                    console.log(JSON.stringify(data));
                },
                error: function(xhr, status, error) {
                   console.log("xhr ",xhr);
                   console.log("status ",status);
                   console.log("error ",error);
                }
            });

            $(".modal-body").hide();
            $(".congrats").show();
            return false;
        });

        $('.slider').slick({
            autoplay:true,
            autoplaySpeed: 1500,
            prevArrow: false,
            nextArrow: false,
            speed: 2000
        });

        $(window).scroll(function(){
           scrollableHeader();
        });

        function scrollableHeader() {
            if($(window).scrollTop()>5){
                var height = $(".header").outerHeight();
                $(".header").addClass('scroll').fadeIn("slow");
                $('.main-content').css('margin-top',height+'px');
            }else{
                $(".header").removeClass('scroll').fadeIn("slow");
                $('.main-content').css('margin-top','0px');
            }
        };

        var wow = new WOW(
                {
                    boxClass:     'wow',
                    animateClass: 'animated',
                    offset:       0,
                    mobile:       true,
                    live:         true,
                    scrollContainer: null
                }
        );
        wow.init();
    });
</script>
